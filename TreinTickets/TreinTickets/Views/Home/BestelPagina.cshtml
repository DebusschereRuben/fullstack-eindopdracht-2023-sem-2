@model TreinTickets.ViewModels.RitVM

@{
    ViewData["Title"] = "BestelPagina";
}

<h1>BestelPagina</h1>

<h4>RitVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="BestelPagina">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlaatsNummer" class="control-label"></label>
                <input asp-for="PlaatsNummer" class="form-control" />
                <span asp-validation-for="PlaatsNummer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VertrekStad" class="control-label"></label>
                <select asp-for="VertrekStad" asp-items="@ViewBag.CityList" class="form-control"></select>
                <span asp-validation-for="VertrekStad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BestemmingsStad" class="control-label"></label>
                <select asp-for="BestemmingsStad" asp-items="@ViewBag.CityList" class="form-control"></select>
                <span asp-validation-for="BestemmingsStad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VertrekDag" class="control-label"></label>
                <input asp-for="VertrekDag" class="form-control" />
                <span asp-validation-for="VertrekDag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
